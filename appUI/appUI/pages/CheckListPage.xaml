<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="appUI.pages.CheckListPage">
    <ContentPage.Content>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackLayout 
                Grid.Row="0" 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center" 
                Orientation="Horizontal" 
                Padding="15,0,15,0">
                <Label 
                    FontSize="Medium" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Start" 
                    x:Name="HeaderLbl"
                    Text="{Binding Title}" 
                    TextColor="DarkSlateGray" 
                    LineBreakMode="TailTruncation"/>
                <StackLayout 
                    Orientation="Horizontal" 
                    HorizontalOptions="EndAndExpand">
                    <Image 
                        Source="date.png" 
                        HeightRequest="24"/>
                    <DatePicker  
                        x:Name="MyDatePicker" 
                        Format="dd MMM " 
                        Date="{Binding Date,Mode=TwoWay}" 
                        FontSize="Micro" 
                        DateSelected="MyDatePicker_DateSelected"/>
                    <Image 
                        Source="clock.png" 
                        HeightRequest="24"/>
                    <TimePicker 
                        x:Name="MyTimePicker" 
                        Format="hh:mm tt" 
                        Time="{Binding Time, Mode=TwoWay}"
                        FontSize="Micro" 
                        Unfocused="MyTimePicker_Unfocused"/>
                </StackLayout>
            </StackLayout>
            <AbsoluteLayout 
                x:Name="Abs" 
                Grid.Row="1" 
                BackgroundColor="WhiteSmoke">
                <ListView 
                    x:Name="TasksList" 
                    HasUnevenRows="True"
                    HeightRequest="{Binding Path=Height, Source={Reference Abs}}" 
                    ItemSelected="TasksList_ItemSelected"
                    ItemTapped="TasksList_ItemTapped" 
                    IsPullToRefreshEnabled="True" 
                    Refreshing="TasksList_Refreshing">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <MenuItem 
                                        Text="Edit" 
                                        Clicked="EditTask_Clicked"  
                                        CommandParameter="{Binding .}"/>
                                    <MenuItem 
                                        Text="Copy" 
                                        Clicked="CopyId_Clicked"  
                                        CommandParameter="{Binding .}"/>
                                    <MenuItem 
                                        x:Name="DeleteTask" 
                                        Text="Delete" 
                                        Clicked="DeleteTask_Clicked"
                                        CommandParameter="{Binding .}" 
                                        IsDestructive="True"/>
                                </ViewCell.ContextActions>
                                <StackLayout 
                                    HeightRequest="50" 
                                    Orientation="Horizontal" 
                                    BackgroundColor="White"
                                    HorizontalOptions="FillAndExpand" >
                                    <Label 
                                       TextColor="{Binding MyColor}" 
                                       Text="{Binding TaskTitle}" 
                                       HorizontalOptions="Start" 
                                       FontSize="Medium"  
                                       TextDecorations="{Binding MyTextDecorations}"
                                       VerticalOptions="Center" 
                                       Margin="15,0,15,0" 
                                       LineBreakMode="TailTruncation"/>
                                    <Image 
                                       Source="tick.png" 
                                       HeightRequest="18" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="EndAndExpand"
                                       BackgroundColor="Transparent" 
                                       Margin="10,0,10,0" 
                                       IsVisible="{Binding IsDone}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ImageButton 
                    Source="plusfab.png" 
                    BackgroundColor="Transparent" 
                    x:Name="PlusFab" 
                    Clicked="PlusFab_Clicked"
                    AbsoluteLayout.LayoutFlags="PositionProportional" 
                    AbsoluteLayout.LayoutBounds=".92,.92,50,50"/>
            </AbsoluteLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>